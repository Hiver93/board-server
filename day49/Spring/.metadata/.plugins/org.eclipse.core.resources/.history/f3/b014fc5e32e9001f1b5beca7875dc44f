package com.example.demo.dto;

import java.time.format.DateTimeFormatter;

import com.example.demo.domain.Comment;

public record CommentResDto(
		Integer id,
		String content,
		Integer postId,
		Integer userId,
		String nickname,
		String createdAt
		) {
	public CommentResDto from(Comment comment) {
		return new CommentResDto(comment.getId(), comment.getContent(), comment.getPost().getId(), comment.getUser().getId(), comment.getUser().getNickname(),
				comment.getCreatedAt().format(DateTimeFormatter.ofPattern("yyyy-MM-dd HH:mm:ss"));
	}
}
