package com.example.demo.dto;

import java.time.format.DateTimeFormatter;

import com.example.demo.domain.Post;

public class PostResDto {

	public static record Detail(
			Integer id,
			String title,
			String content,
			Integer view,
			Integer userId,
			String nickname,
			Integer comments,
			String createdAt,
			String updatedAt,
			List<CommentItem> commentList
			) {
		
		public static Detail from(Post post) {
			return new Detail(post.getId(), post.getTitle(), post.getContent(), post.getView(), post.getUser().getId(), post.getUser().getNickname(), post.getComments(),
					post.getCreatedAt().format(DateTimeFormatter.ofPattern("yyyy-MM-dd HH:mm:ss")),
					post.getCreatedAt().format(DateTimeFormatter.ofPattern("yyyy-MM-dd HH:mm:ss")),
					);
		}
		
		
		public static record CommentItem(
				Integer id,
				String content,
				Integer userId,
				String nickname,
				String createdAt
				) {
			
		}
	}
}
